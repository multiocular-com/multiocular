{
  "extends": ["@logux/stylelint-config"],
  "ignoreFiles": ["dist/**/*"],
  "rules": {
    "declaration-property-value-no-unknown": [
      true,
      {
        "propertiesSyntax": {
          "corner-shape": "round | scoop | bevel | notch | square | squircle"
        }
      }
    ],
    "function-disallowed-list": ["rgb", "rgba", "hsl", "hsla"],
    "unit-disallowed-list": [
      ["px", "em"],
      {
        "ignoreProperties": {
          "px": [
            "font-size",
            "/-shadow$/",
            "/border/",
            "/-radius$/",
            "/outline/",
            "translate"
          ]
        }
      }
    ],
    "property-no-unknown": [
      true,
      {
        "ignoreProperties": ["corner-shape"]
      }
    ],
    "no-descending-specificity": null,
    "color-named": "never",
    "alpha-value-notation": "percentage"
  },
  "overrides": [
    {
      "files": ["**/*.svelte"],
      "customSyntax": "postcss-html"
    }
  ]
}
