{
  "compilerOptions": {
    "target": "ES2024",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "noUncheckedIndexedAccess": true,
    "experimentalDecorators": true,
    "noImplicitOverride": true,
    "types": ["node"],
    "outDir": "dist/",
    "lib": ["es2024", "dom"]
  },
  "include": ["**/*.ts"],
  "exclude": ["*/test", "dist", "node_modules", "scripts", "eslint.config.ts"]
}
